<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/viewPagerFragment">

    <fragment
        android:id="@+id/habitListFragment"
        android:name="ru.sevagrbnv.rabbit.presentation.habitList.HabitListFragment"
        android:label="HabitListFragment" >
        <argument
            android:name="type"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="ru.sevagrbnv.rabbit.presentation.viewPager.ViewPagerFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_viewPagerFragment_to_editFragment"
            app:destination="@id/editFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="ru.sevagrbnv.rabbit.presentation.addEdit.AddEditFragment"
        android:label="Add/Edit habit">
        <argument
            android:name="item_id"
            app:argType="long"
            android:defaultValue="-1L" />
        <argument
            android:name="screen_mode"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="ru.sevagrbnv.rabbit.presentation.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
</navigation>